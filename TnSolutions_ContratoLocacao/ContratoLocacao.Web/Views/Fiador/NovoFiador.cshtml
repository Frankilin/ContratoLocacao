@model ContratoLocacao.Web.Models.CadastroFiadorModelo

@{
    ViewBag.Title = "NovoFiador";
}

<h2>Cadastro Fiador</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        @if (TempData["Mensagem"] != null)
        {
            if (TempData["Resposta"].ToString() == "Sucesso")
            {
                <div class="row">
                    <div class="col s12 m6">
                        <div class="card green lighten-1">
                            <div class="card-content black-text">
                                <span class="card-title">Mensagem</span>
                                <p>
                                    @TempData["Mensagem"].ToString()
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (TempData["Resposta"].ToString() == "Falha")
            {
                <div class="row">
                    <div class="col s12 m6">
                        <div class="card red lighten-1">
                            <div class="card-content black-text">
                                <span class="card-title">Mensagem</span>
                                <p>
                                    @TempData["Mensagem"].ToString()
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NomeFiador, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NomeFiador, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NomeFiador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RGFiador, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RGFiador, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RGFiador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CPFFiador, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CPFFiador, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CPFFiador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CelularFiador, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CelularFiador, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CelularFiador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-success" name="action" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index", "Home")
</div>
