                @Html.EditorFor(model => model.RgLocador, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RgLocador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
