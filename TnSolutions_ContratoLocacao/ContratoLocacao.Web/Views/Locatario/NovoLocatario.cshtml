                @Html.EditorFor(model => model.EnderecoLocatario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EnderecoLocatario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CelularLocatario, htmlAttributes: new { @class = "control-label col-md-2" })
