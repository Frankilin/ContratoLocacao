    <script src="~/scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/scripts/Chosen/chosen.jquery.min.js"></script>
    @RenderSection("stripts", required:false)
