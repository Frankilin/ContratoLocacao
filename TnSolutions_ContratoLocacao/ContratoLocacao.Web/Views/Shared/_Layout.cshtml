<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/Chosen/chosen.min.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar navbar-dark bg-primary">
       
        <img src="~/Imagens/LOGO-TNSOLUTIONS.png" alt="Logo TNSolutions" class="img"/>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" @Html.ActionLink("Home", "Index", "Home")<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Cadastros 
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" @Html.ActionLink("Cadastro Imóvel", "NovoImovel", "Imovel")</a>
                        <a class="dropdown-item" @Html.ActionLink("Cadastro Locador", "NovoLocador", "Locador")</a>
                        <div class="dropdown-divider"></div>
                        @*<a class="dropdown-item" href="Locatario/NovoLocatario">Locatário</a>*@
                        <a class="dropdown-item" @Html.ActionLink("Locatário", "NovoLocatario", "Locatario")</a>
                        <a class="dropdown-item" @Html.ActionLink("Fiador", "NovoFiador", "Fiador")</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" @Html.ActionLink("Incluir novo contrato", "NovoContrato", "Contrato")<span class="sr-only">(current)</span></a>
                </li>
            </ul>
            @*<a class="navbar-brand" @Html.ActionLink("Incluir novo contrato", "NovoContrato", "Contrato")</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsupportedcontent" aria-controls="navbarsupportedcontent" aria-expanded="false" aria-label="toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>*@

            @*<form class="form-inline my-2 my-lg-0">
